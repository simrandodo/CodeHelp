    <script>
      function validateForm() {
        let x = document.forms["myForm"]["fname"].value;
        if (x == "") {
          alert("e-mail must be filled out");
          return false;
        }
        let y = document.forms["myForm"]["pname"].value;
        if (y == "") {
          alert("password must be filled out");
          return false;
        }
      }
      </script>

    
